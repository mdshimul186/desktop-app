{
  "name": "ts4u",
  "version": "2.2.0",
  "private": true,
  "main": "public/electron.js",
  "author": "shimul",
  "description": "TS4U desktop app",
  "homepage": "./",
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "antd": "^4.18.0",
    "axios": "^0.24.0",
    "cross-env": "^7.0.3",
    "electron-is-dev": "^2.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "html-react-parser": "^1.4.4",
    "js-cookie": "^3.0.1",
    "mime": "^3.0.0",
    "moment": "^2.29.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "react-quill": "^1.3.5",
    "react-redux": "^7.2.6",
    "react-router-dom": "^5.3.0",
    "react-scripts": "5.0.0",
    "redux": "^4.1.2",
    "redux-devtools-extension": "^2.13.9",
    "redux-thunk": "^2.4.1",
    "sass": "^1.45.1",
    "socket.io-client": "^4.4.0",
    "spinners-react": "^1.0.6",
    "validator": "^13.7.0",
    "web-vitals": "^2.1.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "electron .",
    "dev": "concurrently -k \"cross-env BROWSER=none npm start\" \"npm:electron\"",
    "electron": "wait-on tcp:3000 && electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "make:linux": "npm run build && electron-builder --linux",
    "make:macos": "npm run build && electron-builder --mac",
    "make:win": "npm run build && electron-builder --win --x64"
  },
  "build": {
    "productName": "TS4U",
    "appId": "com.ts4u.app",
    "protocols": {
      "name": "TS4U app",
      "schemes": [
        "ts4u-app"
      ]
    },
    "files": [
      "build/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "/src/assets/logoSquare.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 430,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "/src/assets/logoSquare.png",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "AppImage"
      ],
      "category": "Development"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "electron": "16.0.5",
    "electron-builder": "^22.14.5",
    "wait-on": "^5.1.0"
  }
}
